{
  "match": {
    "${$validator}": "/@?dcic/signature-commons-schema/(v[0-9]+/)?core/resource.json"
  },
  "properties": {
    "Image": {
      "alt": "${meta['Name']}",
      "src": "${meta.Icon || 'https://raw.githubusercontent.com/MaayanLab/lymemind-commons-schema/master/images/default-project.png'}",
      "icon": true,
      "name": true,
      "text": "${meta['Name']}",
      "type": "img",
      "priority": 1,
      "visibility": 1
    },
    "Description": {
      "description": true,
      "subtitle": true,
      "text": "${meta['Description'] || ''}",
      "type": "text",
      "priority": 2,
      "visibility": 2
    }
  }
}